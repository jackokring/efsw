# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x86_64
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x86_64)
  efsw_static_lib_config = debug_x86_64
  efsw_test_config = debug_x86_64
  efsw_shared_lib_config = debug_x86_64

else ifeq ($(config),debug_x86)
  efsw_static_lib_config = debug_x86
  efsw_test_config = debug_x86
  efsw_shared_lib_config = debug_x86

else ifeq ($(config),release_x86_64)
  efsw_static_lib_config = release_x86_64
  efsw_test_config = release_x86_64
  efsw_shared_lib_config = release_x86_64

else ifeq ($(config),release_x86)
  efsw_static_lib_config = release_x86
  efsw_test_config = release_x86
  efsw_shared_lib_config = release_x86

else ifeq ($(config),relwithdbginfo_x86_64)
  efsw_static_lib_config = relwithdbginfo_x86_64
  efsw_test_config = relwithdbginfo_x86_64
  efsw_shared_lib_config = relwithdbginfo_x86_64

else ifeq ($(config),relwithdbginfo_x86)
  efsw_static_lib_config = relwithdbginfo_x86
  efsw_test_config = relwithdbginfo_x86
  efsw_shared_lib_config = relwithdbginfo_x86

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := efsw-static-lib efsw-test efsw-shared-lib

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

efsw-static-lib:
ifneq (,$(efsw_static_lib_config))
	@echo "==== Building efsw-static-lib ($(efsw_static_lib_config)) ===="
	@${MAKE} --no-print-directory -C . -f efsw-static-lib.make config=$(efsw_static_lib_config)
endif

efsw-test: efsw-static-lib
ifneq (,$(efsw_test_config))
	@echo "==== Building efsw-test ($(efsw_test_config)) ===="
	@${MAKE} --no-print-directory -C . -f efsw-test.make config=$(efsw_test_config)
endif

efsw-shared-lib:
ifneq (,$(efsw_shared_lib_config))
	@echo "==== Building efsw-shared-lib ($(efsw_shared_lib_config)) ===="
	@${MAKE} --no-print-directory -C . -f efsw-shared-lib.make config=$(efsw_shared_lib_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f efsw-static-lib.make clean
	@${MAKE} --no-print-directory -C . -f efsw-test.make clean
	@${MAKE} --no-print-directory -C . -f efsw-shared-lib.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x86_64"
	@echo "  debug_x86"
	@echo "  release_x86_64"
	@echo "  release_x86"
	@echo "  relwithdbginfo_x86_64"
	@echo "  relwithdbginfo_x86"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   efsw-static-lib"
	@echo "   efsw-test"
	@echo "   efsw-shared-lib"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"