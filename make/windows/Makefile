# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := efsw-static-lib efsw-test efsw-shared-lib

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

efsw-static-lib: 
	@echo "==== Building efsw-static-lib ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f efsw-static-lib.make

efsw-test: efsw-static-lib
	@echo "==== Building efsw-test ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f efsw-test.make

efsw-shared-lib: 
	@echo "==== Building efsw-shared-lib ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f efsw-shared-lib.make

clean:
	@${MAKE} --no-print-directory -C . -f efsw-static-lib.make clean
	@${MAKE} --no-print-directory -C . -f efsw-test.make clean
	@${MAKE} --no-print-directory -C . -f efsw-shared-lib.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo "   relwithdbginfo"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   efsw-static-lib"
	@echo "   efsw-test"
	@echo "   efsw-shared-lib"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
